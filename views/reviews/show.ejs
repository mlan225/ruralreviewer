<% include ../partials/header %>

<body class="show">
    <div class="row">
        <div class="container">
            
            <a href="/reviews/<%=review._id%>/edit" class="btn btn-primary pull-left">Edit</a>
        
            <h1><%=review.park%></h1> 
            
            <div class="thumbnail" id="showImage">
                <img src="<%=review.image%>">
            </div>
            
            <h1>Adventure Review:</h1>
            <p><%= review.description %></p>
            
            <div class="well">
                <h1><a href="#" class="btn btn-success">Comment</a></h1>
                <hr>
                <% review.comments.forEach(function(comment){ %> 
                    <p><strong><%=comment.author%></strong> - <%= comment.text %></p>
                <% }); %>
            </div>
        
        </div>
    </div> 
        
        <a class="btn btn-primary" href="/reviews">Go Back</a>
    
    
</body> 

<% include ../partials/footer %>