
<% include ../partials/header %>

<div class="newReviewForm">
    <div class="container">
        <div class="row">
            <h1 style="text-align:center;">Edit <%= park.park %></h1>
            <div style="width:30%; margin:25px auto;">
            <form action="/reviews/<%= park._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="park[park]" value="<%= park.park %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[image]" value="<%= park.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[description]" value="<%= park.description %>">
                </div>
                
                <button class="btn btn-large btn-primary btn-block">Submit</button>
            </form>
            
            <form id="delete" action="/reviews/<%= park._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-block btn-large btn-danger">Delete</button>
            </form>
            
            
            <a href="/reviews">go back</a>
            
            </div> 
        </div>
    </div>
</div>

<% include ../partials/footer %>



