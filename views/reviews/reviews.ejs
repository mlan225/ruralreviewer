<% include ../partials/header %>

<body class="reviews">
    <div class="container">
        <header class="page-header text-center">
             <h1>Hundreds of trusted reviews</h1><h3>from our fellow adventurers!</h3>
        </header>
    
    
    
    <div class="row" > <!--the flex wrap helps keep the grid-->
        <div class="container">
            <% reviews.forEach(function(review){ %>
                <div class="col-lg-3 col-md-6">
                    <div class="thumbnail">
                        <img src="<%= review.image %>">
                            <div class="caption text-center">
                                <%= review.park %>
                            </div>
                            <p>
                                <a href="/reviews/<%=review._id%>" class="btn btn-primary">More Info</a>
                            </p>
                    </div>
                </div>
             <% }) %>      
        </div>
        </div>
    </div>
</body>


<% include ../partials/footer %>